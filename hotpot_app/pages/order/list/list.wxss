.orders-detail view{
  line-height: 50rpx;
}
.orders-detail .status{
  color: #b42f2d;
}
.orders-footer{
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding:15rpx 30rpx 15rpx 0;
}
.orders-footer .orders-btn{
  float: right;
  width: 170rpx;
  height: 60rpx;
  line-height:60rpx;
  border-radius: 6rpx;
  background: #b42f2d;
  color: #fff;
}