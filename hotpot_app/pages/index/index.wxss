/** 人气菜品 */
.shop-title {
  display: flex;
  justify-content: flex-start;
  margin: 10rpx 0 10rpx 0;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  padding-top:15rpx;
  padding-bottom:5rpx;
  font-size: 30rpx;
}
.shop-title image {
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 34rpx;
  height: 34rpx
}
.shop {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #eee;
}
.shop-image {
  flex: 1;
  display: flex;
  justify-content: center;
  
}
.shop-image image {
  width: 195rpx;
  height: 145rpx;
}
.right {
  flex: 2;
  padding-right: 30rpx;
}
.right .title {
  font-size: 32rpx;
}
.right .sell-count {
  font-size: 22rpx;
  color: #999;
  display: flex;
  justify-content: flex-end;
  margin: 15rpx 0 20rpx 0
}
.right .detail {
  font-size: 28rpx;
  font-weight: 200;
  color: #666;
  padding-bottom: 5rpx;
  border-bottom: 1rpx dashed #999
}
.detail .space{
  margin-left: 60rpx;
}
.icon {
  flex-direction: column;
  margin-top: 8rpx;
}
.icon image {
  margin: 0 2rpx 0 2rpx;
  width: 35rpx;
  height: 35rpx;  
}